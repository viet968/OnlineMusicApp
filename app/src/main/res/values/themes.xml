<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineMusicApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#1D5FCF</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor" >@color/white</item>
    </style>

    <style name="HomeActivity">
        <item name="android:statusBarColor" >#6B000000</item>
    </style>

    <style name="BlackCursorSearchView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="LyricStyle">
        <item name="android:textSize">16sp</item>
    </style>
</resources>