<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progressing_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/custom_progress_layout"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgViewMusicNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/musical_note" />

    <TextView
        android:text="File name"
        android:id="@+id/txtSongNameUploading"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progressBarUploading"
        android:layout_marginTop="5dp"
        android:progressDrawable="@drawable/custom_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Percent"
        android:id="@+id/txtUploadPercent"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:paddingEnd="5dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>