<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="15dp"
    android:id="@+id/songItemLayout"
    android:focusable="true"
    android:clickable="true"
    android:foreground="@drawable/item_click_anim"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/txtSerial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="01"
        android:textColor="#767E8F"
        android:textSize="20sp" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/dialogImgSongImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/txtSerial"
        android:backgroundTint="#0DDD1E5E"
        android:src="@drawable/lorde_melodrama"
        app:riv_corner_radius="22dp" />

    <TextView
        android:id="@+id/txtItemSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/dialogImgSongImage"
        android:maxLines="2"
        android:text="Song name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtItemSingerNameSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtItemSongName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/dialogImgSongImage"
        android:text="Singer name"
        android:textColor="#8B92A3"
        android:textSize="15sp" />



    </RelativeLayout>


