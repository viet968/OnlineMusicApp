<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    tools:context=".Fragment.NowPlayingFragment">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgSongMinimizePlayer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/song_item_icon"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/txtSongNameMinimizePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/imgSongMinimizePlayer"
        android:text="abcbcbc"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSingerNameSongMinimizePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSongNameMinimizePlayer"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/imgSongMinimizePlayer"
        android:text="abcbcbc"
        android:textColor="#a0a8ba"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imgNextSongMinimizePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:background="@android:color/transparent"
        android:contentDescription="next"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/next_minize" />

    <ImageButton
        android:id="@+id/imgPlayPauseSongMinimizePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgNextSongMinimizePlayer"
        android:background="@null"
        android:contentDescription="play pause"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/play_song_icon" />

</RelativeLayout>